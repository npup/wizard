.wizard-no-support
	border 2px solid #e22
	display inline-block
	padding 1em

.wizard-container, .wizard-container *
	-moz-box-sizing border-box
	box-sizing border-box
	font-family Verdana, Arial, Sans serif
	margin-top 0

.wizard-container
	border 1px solid gold
	background-color #ddd
	width 30em
	border-radius 6px
	.wizard-submit
		display none
		height 100%
		width 49%
		margin 0 .5%
		border-width 2px
		font-size .8em
		&:hover
			border-color #fefefe
	&.has-next
		.wizard-submit-next
			display inline
	&.has-prev
		.wizard-submit-prev
			display inline
			


.wizard-content
.wizard-header
.wizard-footer
	padding 1em

.wizard-header *
	margin: 0

.wizard-footer
	background-color #aaa
	text-align right
	padding .5em
	height 3em

.wizard-form input
	border 1px solid #ddd
	border-radius 3px
	padding .5em
	text-align center

