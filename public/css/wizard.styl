.wizard-no-support
  border 2px solid #e22
  display inline-block
  padding 1em

.wizard-container, .wizard-container *
  -moz-box-sizing border-box
  box-sizing border-box
  font-family Verdana, Arial, Sans serif
  margin-top 0

.wizard-container
  position relative
  border 1px solid gold
  background-color #ddd
  width 30em
  border-radius 6px
  .wizard-submit
    display none
    height 100%
    width 49%
    margin 0 .5%
    border-width 2px
    font-size .8em
    &:hover
      border-color #fefefe
  &.has-next
    .wizard-submit-next
      display inline
  &.has-prev
    .wizard-submit-prev
      display inline


  .msg-container
    width 70%
    position absolute
    top -1em
    right 15%
    padding .5em
    text-align center
    background #f8f8f8
    border 3px solid #666
    border-radius 5px
    display none
    z-index 1
    outline none

    &.visible
      display block

    .hide-msg
      border 0
      background transparent
      position absolute
      top 0
      right 0
      font-family Courier, Sans serif
      font-size 1.5em
      color #a22

      &:hover
        color #d44
      
  .fade
    opacity 0
    -webkit-transition opacity 3s ease-out
    -moz-transition opacity 3s ease-out
    -ms-transition opacity 3s ease-out
    -o-transition opacity 3s ease-out
    transition opacity 3s ease-out

  .fog
    width 100%
    height 100%
    background-color #eaa
    opacity .7
    position absolute
    top 0
    z-index 0
    display none

  .msg-container
    &.modal + .fog
      display block

.wizard-content
.wizard-header
.wizard-footer
  padding 1em

.wizard-header *
  margin: 0

.wizard-footer
  background-color #aaa
  text-align right
  padding .5em
  height 3em

.wizard-form input
  border 1px solid #ddd
  border-radius 3px
  padding .5em
  text-align center

